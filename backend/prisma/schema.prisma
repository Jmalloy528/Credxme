generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  role         Role     @default(CLIENT)
  firstName    String
  lastName     String
  phone        String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  clientProfile Client?
  auditLogs     AuditLog[]
}

model Client {
  id                    String      @id @default(uuid())
  userId                String      @unique
  user                  User        @relation(fields: [userId], references: [id])
  ssnEncrypted          String?
  ssnLast4              String?
  dob                   DateTime?
  currentAddress        String?
  status                ClientStatus @default(LEAD)
  serviceTier           ServiceTier  @default(ESSENTIAL)
  creditGoal            String?
  stripeCustomerId      String?
  stripeSubscriptionId  String?
  setupFeePaid          Boolean      @default(false)
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt

  disputes   Dispute[]
  payments   Payment[]
}

model Dispute {
  id              String        @id @default(uuid())
  clientId        String
  client          Client        @relation(fields: [clientId], references: [id])
  creditorName    String
  accountNumber   String?
  bureau          Bureau
  round           Int           @default(1)
  status          DisputeStatus @default(PENDING)
  letterSentAt    DateTime?
  responseDueAt   DateTime?
  responseReceivedAt DateTime?
  outcome         String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Payment {
  id        String        @id @default(uuid())
  clientId  String
  client    Client        @relation(fields: [clientId], references: [id])
  amount    Decimal       @db.Decimal(10, 2)
  type      PaymentType
  status    PaymentStatus
  stripePaymentId String?
  retryCount Int          @default(0)
  nextRetryAt DateTime?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  action    String
  entity    String
  entityId  String?
  details   Json?
  ipAddress String?
  createdAt DateTime @default(now())
}

enum Role {
  CLIENT
  STAFF
  ADMIN
}

enum ClientStatus {
  LEAD
  ACTIVE
  PAST_DUE
  CANCELLED
}

enum ServiceTier {
  ESSENTIAL
  AGGRESSIVE
  FAMILY
}

enum Bureau {
  EXPERIAN
  TRANSUNION
  EQUIFAX
}

enum DisputeStatus {
  PENDING
  LETTER_SENT
  RESPONSE_DUE
  COMPLETED
}

enum PaymentType {
  SETUP_FEE
  MONTHLY
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}
